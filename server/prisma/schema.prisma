generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  role      String   @default("DONOR")
  language  String   @default("en")
  createdAt DateTime @default(now())

  donations         Donation[]
  zakatCalculations ZakatCalculation[]
}

model ZakatCalculation {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String
  zakatType    String
  wealthType   String?
  wealthAmount Float
  nisabValue   Float
  zakatRate    Float
  zakatDue     Float
  explanation  String
  createdAt    DateTime @default(now())

  user      User       @relation(fields: [userId], references: [id])
  donations Donation[] // one-to-many, no fields/references needed here
}

model Mosque {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  location      String
  createdAt     DateTime      @default(now())
  beneficiaries Beneficiary[]
}

model Beneficiary {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  imageUrl    String?
  verified    Boolean @default(false)
  mosqueId    String

  mosque Mosque @relation(fields: [mosqueId], references: [id])
}

model Project {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  goalAmount Float
  raised     Float      @default(0)
  createdAt  DateTime   @default(now())
  donations  Donation[]
}

model Donation {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  projectId   String?
  zakatCalcId String? // optional relation to ZakatCalculation
  amount      Float
  zakatType   String
  createdAt   DateTime @default(now())

  user    User              @relation(fields: [userId], references: [id])
  project Project?          @relation(fields: [projectId], references: [id])
  zakat   ZakatCalculation? @relation(fields: [zakatCalcId], references: [id])
}
