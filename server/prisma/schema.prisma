generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  role      String   @default("DONOR")
  language  String   @default("en")
  mosqueId  String? // optional foreign key to Mosque
  createdAt DateTime @default(now())

  donations         Donation[]
  zakatCalculations ZakatCalculation[]

  mosque Mosque? @relation(fields: [mosqueId], references: [id])
}

model ZakatCalculation {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String
  zakatType    String
  wealthType   String?
  wealthAmount Float
  nisabValue   Float?
  zakatRate    Float?
  zakatDue     Float?
  explanation  String
  createdAt    DateTime @default(now())

  user      User       @relation(fields: [userId], references: [id])
  donations Donation[]
}

model Mosque {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  location  String
  createdAt DateTime @default(now())

  beneficiaries Beneficiary[]
  users         User[] // back-relation to User
}

model Beneficiary {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  imageUrl    String?
  verified    Boolean @default(false)
  mosqueId    String

  mosque      Mosque @relation(fields: [mosqueId], references: [id])
  distributions Distribution[] @relation("BeneficiaryDistribution") // <-- add this
}

model Distribution {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  donationId    String?
  beneficiaryId String
  amount        Float
  approved      Boolean     @default(false)
  createdAt     DateTime    @default(now())

  donation      Donation?   @relation(fields: [donationId], references: [id], name: "DonationDistribution")
  beneficiary   Beneficiary @relation(fields: [beneficiaryId], references: [id], name: "BeneficiaryDistribution")
}



model Project {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  goalAmount Float
  raised     Float      @default(0)
  createdAt  DateTime   @default(now())
  donations  Donation[]
}

model Donation {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  projectId   String?
  zakatCalcId String?
  amount      Float
  zakatType   String
  createdAt   DateTime      @default(now())

  user    User              @relation(fields: [userId], references: [id])
  project Project?          @relation(fields: [projectId], references: [id])
  zakat   ZakatCalculation? @relation(fields: [zakatCalcId], references: [id])

  distributions Distribution[] @relation("DonationDistribution") // <-- add this
}
